# n8n × Claude Code 環境変数テンプレート
# このファイルを .env としてコピーして使用してください

# n8n Configuration
N8N_URL=https://your-n8n-instance.com
N8N_API_KEY=your-n8n-api-key-here

# Claude API Configuration  
CLAUDE_API_KEY=your-claude-api-key-here

# Google Cloud Configuration (for Cloud Run deployment)
PROJECT_ID=your-gcp-project-id
REGION=asia-northeast1

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
N8N_PORT=3000

# Database Configuration (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/n8n_claude

# Slack Configuration (for notifications)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Cron Scheduler Configuration
TIMEZONE=Asia/Tokyo
DEFAULT_CRON=0 9 * * *

# Security Configuration
JWT_SECRET=your-jwt-secret-here
API_KEY_HEADER=X-API-Key

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Cloud Run Specific
CLOUD_RUN_SERVICE_NAME=n8n-claude-automation
CLOUD_RUN_REGION=asia-northeast1
CLOUD_RUN_MAX_INSTANCES=10
CLOUD_RUN_MIN_INSTANCES=0

# Development Configuration
DEV_SERVER_PORT=3001
WATCH_FILES=true
AUTO_RELOAD=true